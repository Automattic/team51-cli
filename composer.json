{
    "require": {
        "ext-json": "*",
        "ext-sodium": "*",
        "symfony/console": "^v6.1",
        "symfony/filesystem": "^v6.1",
        "symfony/process": "^v6.1",
        "phpseclib/phpseclib": "^3.0",
        "amphp/http-client": "^4.6"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "files": [
            "src/helpers/functions.php",
            "src/helpers/1password-functions.php",
            "src/helpers/deployhq-functions.php",
            "src/helpers/pressable-functions.php",
            "src/helpers/wpcom-functions.php"
        ],
	    "classmap": [
            "src/"
        ]
    },
    "scripts": {
        "coding-standards:check": [
            "@php phpcs --standard=.phpcs.xml -s -v"
        ],
        "coding-standards:fix": [
            "@php phpcbf --standard=.phpcs.xml -v"
        ]
    },
    "config": {
        "platform": {
            "php": "8.1"
        }
    }
}
